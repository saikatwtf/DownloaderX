<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Gothic Black-Pink) -->
    <style name="Theme.DownloaderX" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gothic_pink</item>
        <item name="colorPrimaryVariant">@color/gothic_purple</item>
        <item name="colorSecondary">@color/gothic_light_pink</item>
        <item name="android:colorBackground">@color/gothic_black</item>
        <item name="colorSurface">@color/gothic_dark_gray</item>
        <item name="colorOnPrimary">@color/gothic_white</item>
        <item name="colorOnSecondary">@color/gothic_black</item>
        <item name="colorOnBackground">@color/gothic_white</item>
        <item name="colorOnSurface">@color/gothic_white</item>
        <item name="android:statusBarColor">@color/gothic_black</item>
        <item name="android:navigationBarColor">@color/gothic_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Splash Theme -->
    <style name="Theme.DownloaderX.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gothic_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">4000</item>
        <item name="postSplashScreenTheme">@style/Theme.DownloaderX</item>
    </style>
    
