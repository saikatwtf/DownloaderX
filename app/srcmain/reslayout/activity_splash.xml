<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gothic_black"
    tools:context=".ui.SplashActivity">

    <!-- Gothic background scene -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/gothic_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App name -->
    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/gothic_pink"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Spider animation -->
    <ImageView
        android:id="@+id/spider_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/spider"
        app:layout_constraintBottom_toTopOf="@id/app_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Spider" />

    <!-- Bat animation -->
    <ImageView
        android:id="@+id/bat_view"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/bat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:contentDescription="Bat" />

    <!-- Scorpion tail -->
    <ImageView
        android:id="@+id/scorpion_view"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/scorpion_tail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:contentDescription="Scorpion tail" />

    <!-- Arcane compass -->
    <ImageView
        android:id="@+id/compass_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/arcane_compass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:contentDescription="Arcane compass" />

    <!-- Magnifier -->
    <ImageView
        android:id="@+id/magnifier_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/magnifier"
        app:layout_constraintBottom_toBottomOf="@id/app_name_text"
        app:layout_constraintEnd_toEndOf="@id/app_name_text"
        app:layout_constraintStart_toStartOf="@id/app_name_text"
        app:layout_constraintTop_toTopOf="@id/app_name_text"
        android:contentDescription="Magnifier" />

    <!-- Mysterious symbols -->
    <ImageView
        android:id="@+id/symbols_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mysterious_symbols"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Mysterious symbols" />

</androidx.constraintlayout.widget.ConstraintLayout>